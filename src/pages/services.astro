---
import Layout from "@/layouts/Layout.astro";
import {
  Code2,
  Rocket,
  LineChart,
  Wrench,
  Check,
  ArrowRight,
} from "lucide-react";
import {
  Card,
  CardHeader,
  CardTitle,
  CardDescription,
  CardContent,
} from "@/components/ui/card";
import { getBaseUrl } from "@/lib/utils";

const services = [
  {
    icon: Code2,
    title: "MVP Development",
    description:
      "Transform your startup idea into a market-ready product in 30 days.",
    features: [
      "Rapid Prototype Development",
      "Core Feature Implementation",
      "User Authentication & Security",
      "Database Architecture",
      "API Development & Integration",
      "Responsive Design for All Devices",
    ],
    benefits:
      "Launch your MVP quickly and efficiently with our focused development approach. We build the essential features that demonstrate your value proposition to users and investors.",
    cta: "Start Your MVP",
  },
  {
    icon: LineChart,
    title: "Startup Strategy",
    description:
      "Technical validation and investor-ready architecture planning.",
    features: [
      "Technical Feasibility Analysis",
      "Scalability Planning",
      "Technology Stack Selection",
      "User Flow Optimization",
      "Data Architecture Design",
      "Infrastructure Cost Planning",
    ],
    benefits:
      "Build investor confidence with a solid technical foundation. Our strategic planning ensures your MVP is built on scalable architecture that can grow with your success.",
    cta: "Plan Your Strategy",
  },
  {
    icon: Rocket,
    title: "Launch Preparation",
    description: "Get your MVP ready for market and investor presentations.",
    features: [
      "Deployment Setup",
      "Performance Optimization",
      "Analytics Integration",
      "User Tracking Setup",
      "Error Monitoring",
      "Basic SEO Implementation",
    ],
    benefits:
      "Launch with confidence knowing your MVP is optimized for performance and ready to collect valuable user insights that will guide your product's evolution.",
    cta: "Prepare Launch",
  },
  {
    icon: Wrench,
    title: "Post-Launch Support",
    description:
      "Continuous improvements based on real user feedback and market demands.",
    features: [
      "Bug Fixes & Improvements",
      "Feature Iterations",
      "Performance Monitoring",
      "User Feedback Integration",
      "Technical Documentation",
      "Investor Demo Support",
    ],
    benefits:
      "Keep your MVP evolving with user feedback and market demands. We help you iterate quickly to improve product-market fit and prepare for funding rounds.",
    cta: "Get Support",
  },
];
---

<Layout title="CodeFounder - Startup Development Services">
  <main class="py-24 bg-gradient-to-b from-white to-orange-50/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 md:mb-16">
        <h1
          class="text-3xl md:text-5xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-orange-600 to-amber-600"
        >
          MVP Development Services
        </h1>
        <p
          class="text-muted-foreground max-w-2xl mx-auto text-sm md:text-base"
        >
          Everything you need to transform your startup idea into an investor-ready MVP in 30 days.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-8 md:gap-12">
        {
          services.map((service) => (
            <Card
              key={service.title}
              className="border-2 hover:border-orange-300 shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden group"
            >
              <CardHeader className="pb-4">
                <div class="flex items-center gap-4">
                  <div class="p-2 rounded-lg bg-orange-50 text-orange-600">
                    <service.icon className="h-6 w-6 md:h-8 md:w-8" />
                  </div>
                  <div>
                    <CardTitle className="text-xl md:text-2xl">
                      {service.title}
                    </CardTitle>
                    <CardDescription className="text-sm md:text-base mt-1">
                      {service.description}
                    </CardDescription>
                  </div>
                </div>
              </CardHeader>

              <CardContent>
                <div class="space-y-6">
                  {/* Features List */}
                  <div class="grid sm:grid-cols-2 gap-3">
                    {service.features.map((feature) => (
                      <div class="flex items-center gap-2 text-sm">
                        <Check className="h-4 w-4 text-orange-600 flex-shrink-0" />
                        <span>{feature}</span>
                      </div>
                    ))}
                  </div>

                  {/* Benefits */}
                  <div class="bg-orange-50/50 p-4 rounded-lg">
                    <p class="text-sm text-muted-foreground">
                      {service.benefits}
                    </p>
                  </div>
                </div>
              </CardContent>
            </Card>
          ))
        }
      </div>

      {/* Bottom CTA */}
      <div class="mt-12 md:mt-16 text-center">
        <a
          href={getBaseUrl("/contact")}
          class="inline-flex items-center gap-2 text-orange-600 hover:text-orange-700 transition-colors text-lg font-semibold"
        >
          Schedule Your Free MVP Consultation
          <ArrowRight className="w-5 h-5" />
        </a>
      </div>
    </div>
  </main>
</Layout>
